@model WebApplication3.Models.ViewModel.LoginViewModel


<div class="intro-header">
    <div class="row">
        <div class="col-lg-12">
            <div class="intro-message embed-responsive-4by3">
                <h1>@ViewBag.WebName</h1>

                <h3>@ViewBag.a</h3>
                <hr class="intro-divider">
                <h2 id="login-title">登入 </h2>
                @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal login-form table-responsive", autocomplete = "off" }))
                {

                    <div class="input-group login-input-group ">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.Account, new { @class = "form-control ", placeholder = "Email" })

                    </div>
                        @Html.ValidationMessageFor(m => m.Account)

                        <div class="input-group login-input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password)

                        <div>
                            <label>
                                @Html.CheckBoxFor(m => m.Remember)
                                @Html.DisplayNameFor(m => m.Remember)
                            </label>
                        </div>

                        <hr />
                        <div class=" text-center">
                            <input class="btn btn-default " type="submit" value="登入" />
                            <a class="btn btn-default" href=@Url.Action("Index")>返回</a>
                        </div>

                }
            </div>
        </div>
    </div>
</div>